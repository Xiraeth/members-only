extends layout 

block content 
  a.float-end.me-5.fs-3#logoutLink(href="/logout") Log out
  .formContainer
    form(method="POST").d-flex.flex-column.align-items-center.col-md-4.col.p-5
      h1.text-center= title 
      p.fs-4.text-center.text-muted(style="user-select: none;") #[i Enter the second secret phrase to become an admin]
      div.form-group.mb-3.w-100
        input#secretPhrase.form-control(type="text" required placeholder="Secret phrase" autocomplete="off" name="secretPhrase")
      button.btn.btn-outline-primary(type="submit") Submit

    if errors 
      ul.mt-3
        for error in errors
          p.text-danger= error.msg
          p.text-muted #[i Hint: "#{hint}"]